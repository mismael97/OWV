    : QWidget(parent), vcdParser(nullptr), timeScale(1.0), timeOffset(0),
      timeMarkersHeight(30), topMargin(10),
      isDragging(false), isDraggingSignal(false), dragSignalIndex(-1), lastSelectedSignal(-1)
{
